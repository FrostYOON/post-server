extends layout

block content
  .container
    h1 게시글 수정
    form(action=`/api/v1/posts/${post._id}/edit` method="post")
      div.form-group
        label(for="title") 제목
        input(type="text" id="title" name="title" value=post.title placeholder="제목을 입력해주세요" required)
      div.form-group
        label(for="userId") 작성자
        input(type="text" id="userId" name="userId" value=user._id disabled)
      div.form-group
        label(for="content") 내용
        textarea(id="content" name="content" rows="10" placeholder="내용을 입력해주세요" required)=post.content
      div.button-group
        button(type="submit") 수정
        a(href="/posts")
          button(type="button") 목록
